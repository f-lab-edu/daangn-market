<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.limikju.daangn_market.repository.MemberRepository">
  <insert id="join" parameterType="com.limikju.daangn_market.domain.dto.MemberSignUpDto">
    INSERT INTO MEMBER(email, password, name, phone, address)
    VALUES(#{email}, #{password}, #{name}, #{phone}, #{address})
  </insert>

  <select id="findByEmail" resultType="com.limikju.daangn_market.domain.Member">
    SELECT * FROM MEMBER WHERE email = #{email}
  </select>
</mapper>